<%include partials/header%>

    <%podcastArr.forEach(podcasts=>{%>
        <div class="container rounded m-auto w-5/6 p-6 my-5 flex items-center justify-start space-x-5 text-white" style="background-color: #191919;">
            <div style="width: 300px;" class="justify-self-start">
                <img class="rounded" src="/uploads/<%=podcasts.image%>" alt="podcasts_<%podcasts.image%>">
            </div>
            <div style="width: 50%;" class="ml-5">
                <h2 class="mb-4 text-xl">
                    <%=podcasts.name%>
                </h2>
                <p>
                    <%=podcasts.description%>
                </p>
                <p class="text-green-600 mt-3.5">
                    likes :
                    <%=podcasts.likes%>
                </p>
                <div class="mt-3.5">
                    <%if(podcasts.isVerified){%>
                        <span class="text-gray-400">Verify Status:</span>
                        <span class="text-green-600">Done.</span>
                        <% if(user.isAdmin){%>
                            <div>
                                <a class="inline-block py-1 px-5 mt-3 bg-black rounded-xl text-white" href="/podcasts/<%=podcasts.id%>/edit">Edit</a>
                                <a class="inline-block py-1 px-5 mt-3 bg-black rounded-xl text-white" href="/podcasts/<%=podcasts.id%>/delete">Delete</a>
                            </div>

                            <%}%>
                                <% }else if(!podcasts.isVerified ){%>
                                    <a class="text-white inline-block py-1 px-5 mt-3 bg-black rounded-xl" href="/podcasts/<%=podcasts.id%>/verify">Verify</a>
                                    <% if(user.isAdmin){%>
                                        <div>
                                            <a class="inline-block py-1 px-5 mt-3 bg-black rounded-xl text-white" href="/podcasts/<%=podcasts.id%>/edit">Edit</a>
                                            <a class="inline-block py-1 px-5 mt-3 bg-black rounded-xl text-white" href="/podcasts/<%=podcasts.id%>/delete">Delete</a>
                                        </div>


                                        <%}%>
                                            <%}%>
                </div>
            </div>
        </div>
        <%})%>

            <!-- <%include partials/footer%> -->